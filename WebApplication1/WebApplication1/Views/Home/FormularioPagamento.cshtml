@using WebApplication1.Models
@model Pagamento

<div class="container-fluid">
    <div class="row">

        <div class="col-lg-12 col-md-6 mb-4 justify-content-center text-center">

            <h1>Deseja confirmar o pagamento de @Model.Descricao?</h1>
            <form class="d-flex flex-column p-2 align-items-center text-center" method="post">

                <div class="form-group col-xl-2 col-md-3 mb-4">
                    <input type="text" class="form-control mb-3 text-center" id="formGroupExampleInput" asp-for="Id" hidden>
                </div>


                @*<div class="form-group col-xl-4 col-md-6 mb-4">*@
                <input type="text" class="form-control mb-3" id="formGroupExampleInput" placeholder=" " asp-for="Descricao" hidden>

                <div class="input-group mb-3">
                    <input class="form-control mb-3 dinheiro form-control" id="formGroupExampleInput2 dinheiro" style="display: inline-block;" asp-for="Valor" hidden>
                </div>

                <input type="text" class="form-control mb-3 money2" id="formGroupExampleInput" placeholder="" asp-for="CodBarras" hidden>

                @*</div>*@
                <div class="form-group col-xl-4 col-md-6 mb-4">

                    <input type="date" class="form-control mb-3" id="formGroupExampleInput2" placeholder="" asp-for="DataVencimento" hidden>
                    <label>Data de Pagamento</label>
                    <input type="date" class="form-control mb-3 " id="formGroupExampleInput2" placeholder="" asp-for="DataPagamento" required>


                </div>

                <div id="botoes-boleto" class="buttons d-flex">

                    <button class="btn btn-success d-flex" asp-action="ConfirmarPagamento">Salvar</button>

                    <button type="button" class="btn btn-danger d-flex" asp-action="Index">Cancelar</button>


                </div>

            </form>

        </div>

    </div>

</div>
<!-- /.container-fluid -->